{
  "name": "messagewerks-back",
  "version": "1.0.0",
  "description": "newsletter manager",
  "main": "./src/server.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "-r dotenv/config dotenv_config_path=.env",
    "serve": "node -r dotenv/config dotenvConfig.js dotenv_config_path=.env &&  nodemon ./src/server.js",
    "build": "rimraf dist && webpack --config=webpack.config.js --mode development",
    "test": "jest --watch",
    "build:dev": "rimraf dist && webpack --config=webpack.dev.config.js --mode development",
    "build:prod": "rimraf dist && webpack --config=webpack.prod.config.js --mode production",
    "doc": "rimraf ./docs/docs && jsdoc -c jsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+"
  },
  "keywords": [
    "node"
  ],
  "author": "Ricky Liew",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RCode-Blue/boilerplate-node/issues"
  },
  "homepage": "https://github.com/RCode-Blue/boilerplate-node#readme",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.11.5",
    "@shelf/jest-mongodb": "^1.2.3",
    "babel-loader": "^8.1.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "node-mocks-http": "^1.9.0",
    "nodemon": "^2.0.6",
    "rimraf": "^3.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.12",
    "path": "^0.12.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/tests/__mocks__/styleMock.js"
    }
  }
}
